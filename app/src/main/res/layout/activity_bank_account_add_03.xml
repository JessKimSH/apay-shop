<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/spoqa_han_sans_regular"
                android:gravity="center"
                android:text="결제 계좌 등록"
                android:textColor="#000000"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/close_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_close" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/step_01"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_bluecircle"
                    android:fontFamily="@font/spoqa_han_sans_regular"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/colorWhite" />

                <TextView
                    android:id="@+id/step_01_text"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:fontFamily="@font/spoqa_han_sans_regular"
                    android:gravity="center"
                    android:text="은행 선택"
                    android:textColor="@color/colorblack"
                    android:textSize="16sp" />

            </LinearLayout>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="5dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layerType="software"
                android:src="@drawable/dashed_line" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/step_02"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_bluecircle"
                    android:fontFamily="@font/spoqa_han_sans_regular"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="@color/colorWhite" />

                <TextView
                    android:id="@+id/step_02_text"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:fontFamily="@font/spoqa_han_sans_regular"
                    android:gravity="center"
                    android:text="계좌번호 입력"
                    android:textColor="@color/colorblack"
                    android:textSize="16sp" />

            </LinearLayout>


            <ImageView
                android:layout_width="30dp"
                android:layout_height="5dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layerType="software"
                android:src="@drawable/dashed_line" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/step_03"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_bluecircle"
                    android:fontFamily="@font/spoqa_han_sans_regular"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/colorWhite" />

                <TextView
                    android:id="@+id/step_03_text"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:fontFamily="@font/spoqa_han_sans_regular"
                    android:gravity="center"
                    android:text="본인 인증"
                    android:textColor="@color/colorblack"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/finish_textview"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:layout_marginBottom="50dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/password_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1.2">


                <ImageView
                    android:id="@+id/password_char_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:maxWidth="10dp"
                    android:maxHeight="10dp"
                    android:src="@drawable/ic_greycircle" />

                <ImageView
                    android:id="@+id/password_char_02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:maxWidth="10dp"
                    android:maxHeight="10dp"
                    android:src="@drawable/ic_greycircle" />

                <ImageView
                    android:id="@+id/password_char_03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:maxWidth="10dp"
                    android:maxHeight="10dp"
                    android:src="@drawable/ic_greycircle" />

                <ImageView
                    android:id="@+id/password_char_04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:maxWidth="10dp"
                    android:maxHeight="10dp"
                    android:src="@drawable/ic_greycircle" />

                <ImageView
                    android:id="@+id/password_char_05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:maxWidth="10dp"
                    android:maxHeight="10dp"
                    android:src="@drawable/ic_greycircle" />

                <ImageView
                    android:id="@+id/password_char_06"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:maxWidth="10dp"
                    android:maxHeight="10dp"
                    android:src="@drawable/ic_greycircle" />


            </LinearLayout>

            <EditText
                android:id="@+id/password_edit"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:backgroundTint="@color/colorWhite"
                android:cursorVisible="false"
                android:inputType="number"
                android:maxLength="6"
                android:outlineAmbientShadowColor="@color/colorWhite"
                android:outlineSpotShadowColor="@color/colorWhite"
                android:shadowColor="@color/colorWhite"
                android:textColor="@color/colorWhite"
                android:textColorHighlight="@color/colorWhite"
                android:textColorHint="@color/colorWhite"
                android:textColorLink="@color/colorWhite"
                android:visibility="visible" />

            <TextView
                android:id="@+id/underline_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="18dp"
                android:fontFamily="@font/spoqa_han_sans_regular"
                android:gravity="center"
                android:text="@string/easypassword_text_01"
                android:textColor="#848690"
                android:textSize="12dp">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/spoqa_han_sans_regular"
                android:gravity="center"
                android:text="비밀번호 재설정을 위해서는 본인인증이 필요합니다."
                android:textColor="#848690"
                android:textSize="12dp">

            </TextView>


        </LinearLayout>

        <include
            android:id="@+id/numeric_key_pad"
            layout="@layout/numeric_key_pad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/finish_textview" />

    </LinearLayout>


    <TextView
        android:id="@+id/finish_textview"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_alignParentBottom="true"
        android:background="#304db9"
        android:gravity="center"
        android:text="다음"
        android:textColor="#ffffff"
        android:textSize="@dimen/text_size_18" />


</RelativeLayout>